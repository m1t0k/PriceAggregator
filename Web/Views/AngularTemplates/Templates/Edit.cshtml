@using PriceAggregator.Web.App_LocalResources
@model PriceAggregator.Core.DataEntity.Category

@{
    Layout = null;
}

<!-- Modal Dialog -->
<div id="EditDialog" title="@Category.EditCategoryTitle" 
     >
    <form name="EditForm">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    <input type="text" id="Name" name="Name" class="form-control" ng-model="currentCategory.Name" required/>

                    <div ng-messages="EditCategoryForm.Name.$error"  class="text-danger" role="alert">
                        <div ng-messages-include="/AngularTemplates/Inline?templateName=ValidationMessages"></div>
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new {@class = "control-label col-md-3"})
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.Description, new {@class = "form-control", rows = 5, ng_model = "currentCategory.Description"})

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Save" class="btn btn-primary" ng_click="saveCategory()"/>
                        <button type="reset" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>